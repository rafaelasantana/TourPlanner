<a href="@Url" class="@ButtonClass @(ButtonText == null ? "rounded-pill" : "")" style="width: @(ButtonText == null ? ButtonWidth : "5rem"); border-radius: @BorderRadius; margin-right: 0.2rem">
    <i class="@IconClass"></i>
    @if (ButtonText != null)
    {    
        <span class="ms-1">@ButtonText</span>
    }
</a>

@code {
    [Parameter]
    public string Url { get; set; } = string.Empty;

    [Parameter]
    public string? ButtonText { get; set; }

    [Parameter]
    public string ButtonClass { get; set; } = "btn btn-outline-secondary";

    [Parameter]
    public string ButtonWidth { get; set; } = "3rem";

    [Parameter]
    public string BorderRadius { get; set; } = "0.5rem";

    [Parameter]
    public string IconClass { get; set; } = "bi bi-pencil-square"; // Default icon class
}